{
  "name": "springboot-app",
  "version": "0.1.0",
  "bin": {
    "infrastructure": "bin/springboot-app.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "deploy": "npx cdk deploy --all --require-approval never",
    "prepare": "husky install",
    "prebuild": "cd data-migration/ && zip -r ../data-migration.zip . && mv ../data-migration.zip ../data-migration-out && cd -",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "prettier-format": "prettier --write .",
    "prettier-watch": "onchange '**/*.*' -- prettier --write {{changed}}",
    "verify": "cinc-auditor exec verification -t aws://"
  },
  "devDependencies": {
    "@prettier/plugin-ruby": "^1.6.0",
    "@types/aws-lambda": "ts4.9",
    "@types/jest": "ts4.9",
    "@types/node": "ts4.9",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "aws-cdk": "^2.83.1",
    "esbuild": "^0.18.2",
    "eslint": "^8",
    "eslint-config-prettier": "^8",
    "eslint-import-resolver-typescript": "^2",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4",
    "eslint-plugin-unicorn": "^47.0.0",
    "husky": "^8",
    "jest": "^29",
    "lint-staged": "^13",
    "onchange": "^7",
    "prettier": "^2",
    "prettier-plugin-java": "^1.3.0",
    "prettier-plugin-sh": "^0.7.1",
    "ts-jest": "^29",
    "ts-node": "^10",
    "typescript": "^4.9"
  },
  "dependencies": {
    "@aws-sdk/client-codebuild": "^3.352.0",
    "aws-cdk-lib": "^2.83.1",
    "aws-lambda": "^1.0.6",
    "cdk-ecr-deployment": "^2",
    "constructs": "^10.0.0",
    "source-map-support": "^0.5.16"
  },
  "lint-staged": {
    "*.{js,css,md,java,sh}": "prettier --write"
  }
}
