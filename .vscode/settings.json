{
    "prettier.requireConfig": true,
    // Default (format when you paste)
    "editor.formatOnPaste": true,
    // Default (format when you save)
    "editor.formatOnSave": true,
    // Use prettier as the default formatter
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    // Hide generated .d.ts and .js files if they have a corresponding .ts file
    "files.exclude": {
        // Hide all files that end in .d.ts if they have a .ts file
        "**/*.d.ts": {
            "when": "$(basename).ts"
        },
        // Hide all files that end with .js if they have a .ts file
        "**/*.js": {
            "when": "$(basename).ts"
        },
    },
    "java.compile.nullAnalysis.mode": "automatic",
    "java.configuration.updateBuildConfiguration": "interactive",
    "cSpell.words": [
        "appuser",
        "damnhandy",
        "dbmigrator",
        "dbname",
        "demoapp",
        "elasticloadbalancingv",
        "Fargate",
        "JDBC",
        "mebibytes",
        "POWERTOOLS",
        "servicenetwork",
        "springboot"
    ]
}